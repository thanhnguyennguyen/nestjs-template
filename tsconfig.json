{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@helpers/*": ["helpers/*"],
      "@configs/*": ["configs/*"],
    },
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
